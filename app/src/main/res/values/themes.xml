<resources>
    <!-- Base application theme. -->
    <style name="Theme.IngenieriaSoftware" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:textColorHint">#9E9E9E</item>

        <item name="android:textColor">#000000</item>

<!--        <item name="editTextStyle">@style/CustomEditTextStyle</item>-->


        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IngenieriaSoftware.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IngenieriaSoftware.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomEditTextStyle">
<!--        <item name="android:background">@drawable/custom_edittext_background</item>-->
        <item name="android:textColor">#0000FF</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>