<resources>
    <!-- Base application theme. -->
    <style name="Theme.IngenieriaSoftware" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/secondary_text</item>

        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorHint">@color/primary_light_text</item>
        <item name="android:textColor">@color/primary</item>

        <item name="editTextStyle">@style/CustomEditTextStyle</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IngenieriaSoftware.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IngenieriaSoftware.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomEditTextStyle">
        <item name="android:background">@drawable/custom_edittext_background</item>
        <item name="android:textSize">16sp</item> <!-- TamaÃ±o del texto -->
        <item name="android:padding">12dp</item> <!-- Padding interno -->
        <item name="android:clickable">true</item>
        <item name="android:selectable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomAccentButtonStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>