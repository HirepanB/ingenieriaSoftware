<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado seleccionado o enfocado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" /> <!-- Color de fondo azul claro -->
            <stroke android:width="2dp" android:color="@color/primary" /> <!-- Borde azul oscuro -->
            <corners android:radius="3dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal (sin seleccionar) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" /> <!-- Color de fondo azul claro -->
            <stroke android:width="2dp" android:color="@color/primary_light" /> <!-- Borde azul oscuro -->
            <corners android:radius="3dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
</selector>
